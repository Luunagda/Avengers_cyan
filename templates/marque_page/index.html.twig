{% extends 'base.html.twig' %}

{% block title %}Hello MarquePageController!{% endblock %}
{% block stylesheets %}
<link href="{{asset("css/index.css")}}" rel="stylesheet"/>
{% endblock %}
{% block content %}

<div class="example-wrapper">
    
    <h2>Liste complète des marques-pages</h2>
    <table>
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">URL</th>
                <th scope="col">Date</th>
                <th scope="col">Commentaire</th>
                <th scope="col">Mots-clés</th>
            </tr>
        </thead>
        <tbody>
            {% for page in marques_pages %}
                <tr>
                    <td>{{page.id}}</td>
                    <td><a class="link" href="{{ path('marque_page_detail', { 'id': page.id }) }}">{{page.url}}</a></td>
                    <td>{{page.dateCreation|date("d/m/Y")}}</td>
                    <td>{{page.commentaire}}</td>
                    <td>
                        {% for mc in page.motsCles %}
                            {{mc.motsCles}}
                        {% endfor %}
                    </td>

                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
