{% extends 'marque_page/layout.html.twig' %}

{% block content_detail %}    
    <h2>Liste complète des marques-pages</h2>
    <a class="link" href="{{ path('marque_page_ajout') }}">Ajouter un marque-page</a>
    <table>
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">URL</th>
                <th scope="col">Date</th>
                <th scope="col">Commentaire</th>
                <th scope="col">Mots-clés</th>
                <th scope="col">Modifier</th>
            </tr>
        </thead>
        <tbody>
            {% for page in marques_pages %}
                <tr>
                    <td>{{page.id}}</td>
                    <td><a class="link" href="{{ path('marque_page_detail', { 'id': page.id }) }}">{{page.url}}</a></td>
                    <td>{{page.dateCreation|date("d/m/Y")}}</td>
                    <td>{{page.commentaire}}</td>
                    <td>
                        {% for mc in page.motsCles %}
                            {{mc.motsCles}}
                        {% endfor %}
                    </td>
                    <td><a class="link" href="{{ path('marque_page_modifier', { 'id': page.id }) }}">Modifier</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
