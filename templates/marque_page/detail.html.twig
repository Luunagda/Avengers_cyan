{% extends 'base.html.twig' %}

{% block title %}Hello MarquePageController!{% endblock %}

{% block content %}

<div class="example-wrapper">
    <h2>Detail du Marque page avec l'id : {{marque_page.id}}</h2>
    <a class="link" href="{{ path('marque_page_index') }}">⬅️Retour arrière</a>
    <table>
        <thead>
            <tr>
                <th scope="col">Libellé</th>
                <th scope="col">Valeur</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>ID</td>
                <td>{{marque_page.id}}</td>
            </tr>
            <tr>
                <td>URL</td>
                <td>{{marque_page.url}}</td>
            </tr>                 
            <tr>
                <td>Date de création</td>
                <td>{{marque_page.dateCreation|date("d/m/Y")}}</td>
            </tr>
            <tr>
                <td>Commentaire</td>
                <td>{{marque_page.commentaire}}</td>
            </tr>
            <tr>
                <td>Mots-clés</td>
                <td>
                    {% for mc in marque_page.motsCles %}
                        <p class="motcle">{{mc.motsCles}}</p>
                    {% endfor %}
                </td>
            </tr>
      </tbody>
    </table>
</div>
{% endblock %}
