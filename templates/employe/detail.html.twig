{% extends 'employe/layout.html.twig' %}

{% block content_detail %}
    <h2>Detail de l'employé avec l'id : {{employe.id}}</h2>
    <a class="link" href="{{ path('employe_index') }}">⬅️Retour arrière</a>
    <table>
        <thead>
            <tr>
                <th scope="col">Libellé</th>
                <th scope="col">Valeur</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>ID</td>
                <td>{{employe.id}}</td>
            </tr>
            <tr>
                <td>Prénom</td>
                <td>{{employe.prenom}}</td>
            </tr>                 
            <tr>
                <td>Nom</td>
                <td>{{employe.nom}}</td>
            </tr>
            <tr>
                <td>Rue</td>
                <td>{{employe.adresse.rue}}</td>
            </tr>
            <tr>
                <td>Ville</td>
                <td>
                    {{employe.adresse.ville}}
                </td>
            </tr>
            <tr>
                <td>Pays</td>
                <td>
                    {{employe.adresse.pays}}
                </td>
            </tr>
            <tr>
                <td>Code Postal</td>
                <td>
                    {{employe.adresse.codePostal}}
                </td>
            </tr>
      </tbody>
    </table>
{% endblock %}
